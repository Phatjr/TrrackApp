<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrackerApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowBackground">@color/color_bg_main</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeTracker.TrackerApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_bg_main</item>
        <item name="android:windowBackground">@color/color_bg_main</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabLayoutTextBoldStyle">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <declare-styleable name="ItemTypeSugar">
        <attr name="defaultColor" format="integer" />
        <attr name="txtState" format="string" />
        <attr name="txtRange" format="string" />
        <attr name="visible" format="boolean" />
    </declare-styleable>

    <style name="Text_Bold">
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">0.8</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textDirection">locale</item>
    </style>

    <declare-styleable name="AdCircleProgress">
        <attr name="adpgb_progress" format="integer"/>
        <attr name="adpgb_max" format="integer"/>

        <attr name="adpgb_unfinished_color" format="color"/>

        <attr name="adpgb_finished_color" format="color"/>

        <attr name="adpgb_gradient_color_one" format="color"/>
        <attr name="adpgb_gradient_color_two" format="color"/>

        <attr name="adpgb_finished_stroke_width" format="dimension"/>
        <attr name="adpgb_unfinished_stroke_width" format="dimension"/>

        <attr name="adpgb_text_size" format="dimension"/>
        <attr name="adpgb_text_color" format="color"/>

        <attr name="adpgb_prefix_text" format="string"/>
        <attr name="adpgb_suffix_text" format="string"/>
        <attr name="adpgb_text" format="string"/>
        <attr name="adpgb_fontFamily" format="reference"/>

        <attr name="adpgb_background_color" format="color"/>

        <attr name="adpgb_inner_bottom_text" format="string"/>
        <attr name="adpgb_inner_bottom_text_size" format="dimension"/>
        <attr name="adpgb_inner_bottom_text_color" format="color"/>

        <attr name="adpgb_circle_starting_degree" format="integer" />
        <attr name="adpgb_show_text" format="boolean"/>
        <attr name="adpgb_inner_drawable" format="reference"/>
    </declare-styleable>

    <style name="NumberPickerText">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>