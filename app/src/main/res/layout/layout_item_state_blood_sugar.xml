<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_5sdp"
    android:padding="@dimen/_5sdp"
    android:id="@+id/itemBg"
    android:background="@drawable/bg_line_bmi_type"
    android:backgroundTint="@color/color_bg_main">

    <TextView
        android:id="@+id/tvState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/txt_default"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:lines="1"
        android:textStyle="bold"
        android:ellipsize="end"
        app:layout_constraintEnd_toStartOf="@id/rbCheck"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/rbCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_20sdp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:buttonTint="@color/colorPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>