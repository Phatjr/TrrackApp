<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layoutInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:foreground="?attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/ic_bg_info_1">

    <ImageView
        android:id="@+id/imgInfo"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_48sdp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_info_1" />

    <ImageView
        android:id="@+id/imgNext"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:src="@drawable/ic_next" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgInfo"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:autoSizeMaxTextSize="@dimen/_10sdp"
        android:autoSizeMinTextSize="@dimen/_8sdp"
        android:autoSizeStepGranularity="@dimen/_1sdp"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_bold"
        android:maxLines="2"
        android:text="@string/txt_title_info_1"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp" />
</RelativeLayout>