                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvUnder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="@string/txt_bmi_type_1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintBottom_toTopOf="@id/tvDes1"
                    app:layout_constraintStart_toEndOf="@id/view_color_normal"
                    app:layout_constraintTop_toTopOf="@id/view_color_normal" />

                <TextView
                    android:id="@+id/tvDes1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
