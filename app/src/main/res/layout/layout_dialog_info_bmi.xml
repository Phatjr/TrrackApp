        android:textSize="@dimen/_18sdp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_260sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:scrollbars="none">

        <LinearLayout
