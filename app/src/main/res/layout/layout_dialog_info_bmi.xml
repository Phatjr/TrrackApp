                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintBottom_toBottomOf="@id/view_color_normal"
                    app:layout_constraintStart_toEndOf="@id/view_color_normal"
                    app:layout_constraintTop_toBottomOf="@id/tvUnder" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
